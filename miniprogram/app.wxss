@import "css/iconfont-base64.wxss";

/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 


/* 控件样式 */
input[type=text]{
  line-height: 26px;
  border: 1px solid #f0f0f0;
  border-radius: 8px;
  padding-left: 10px;
}


/* 常用颜色 */
.blue{
  color: #3596fc;
}
.red{
  color: #E64340;
}
.white{
  color: #fff;
}
.gray{
  color: #666;
}
.light-gray{
  color: #999;
}
.green{
  color: #35fc96;
}
.light-green{
  color: chartreuse;
}
.dark-green{
  color:#26ad67;
}
.dark-yellow{
  color: darkkhaki;
}
.yellow{
  color: yellow;
}
.hotpink{
  color: hotpink;
}
.purple{
  color: blueviolet;
}

/* 常用背景颜色 */
.bg-red{
  background-color: #E64340;
}
.bg-blue{
  background-color: #3596fc;
}
.bg-white{
  background-color: #fff;
}

/* hover-class */
.red-btn-hover{
  opacity: 0.2;
}