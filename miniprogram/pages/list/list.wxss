.list-block{
  width: 96%;
  margin:0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
}
.list-item{
  width: 45%;
  height:200px;
  margin: 16px 0px;
  border-radius: 4px;
  border: 1px solid #f0f0f0;
  box-shadow: 1px 1px 10px 1px rgba(0,0,0,0.1);
  overflow: hidden;
}
.list-item:nth-child(2n){
  margin-right: 0;
}
.list-item image{
  width: 100%;
  height:160px;
  border-radius: 4px;
}
.list-item text{
  margin: 16px 0;
  text-align: center;
}
.uploader-text view{
  display: block;
  text-align:center;
  line-height: 30px;
}

/* 搜索 */
.search-section{
  margin: 10px 0px;
  padding: 5px;
}
.search-section button, .search-section input{
  display: inline-block;
}
.search-section input{
  border: 1px solid #f0f0f0;
  border-radius: 6px;
  font-size: 14px;
  line-height: 24px;
  margin-right: 4px;
  padding: 0px 5px;
}
.search-section button{
  line-height: 26px;
}
