.block{
  width: 98%;
  margin: 16px auto;
  padding: 16px;
  border-radius: 5px;
  overflow: hidden;
}
.checkbox{
  display: inline-block;
  margin-top: 20px;
}
.list-item{
  display:inline-block;
  width:89%;
  margin:10px 2%;
  padding:10px;
  border-radius: 5px;
  box-shadow: 1px 1px 10px 1px rgba(0,0,0,0.2);
  position: relative;
}
.list-item .left{
  width: 35%;
}
.list-item .left .book-img{
  width: 100%;
  height: 120px;
}
.list-item .right{
  width: 63%;
  vertical-align: top;
}
.list-item .left, .list-item .right{
  display: inline-block;
}
.list-item .right .title{
  width: 90%;
  line-height: 40px;
  font-size: 18px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.list-item .right .author{
  line-height: 24px;
  font-size: 12px;
  color: #666;
}
.list-item .right .operate{
  overflow: hidden;
  font-size: 12px;
  color: #666;
  line-height: 20px;
}
.list-item .operate .price{
  display: block;
}
.list-item .operate .number{
  margin-left: 10px;
  display: inline-block;
  width: 40px;
  vertical-align: top;
  line-height: 24px;
}
.change-block{
  display: inline-block;
}
.operate .opt-btn{
  margin-right: 10px;
  padding: 0px 16px;
  line-height: 20px;
  font-size: 12px;
  display: inline-block;
}
.operate .opt-btn:last-child{
  margin-right: 0px;
}
.label-text{
  vertical-align:top;
  line-height:24px;
  display:inline-block;
}
.total-block text{
  color: red;
}
.list-item .check-btn{
  position: absolute;
  right: 10px;
  top: 10px;
  width: 30px;
  height: 30px;
}

.statistic-block{
  width: 100%;
  margin: 10px 10px;
  font-size: 14px;
}
.statistic-title text{
  display: inline-block;
}
.settlement{
  position: fixed;
  left: 0;
  bottom: 0;
}
.bottom-btn{
  display: inline-block;
  width: 50px;
  height: 50px;
  border-radius: 50%;
  font-size: 14px;
  line-height: 30px;
  padding: 10px;
}