<view class='container'>
  <form bindsubmit="bindFormSubmit" bindreset="formReset" class='form-container'>
    <view class="section">
      <input  bindinput="savePhone" placeholder="标题" name="name" type="text" class="mt-top"/>
    </view>
    <view class="section  code-container">
      <textarea bindblur="changeDesc" auto-height placeholder="详细内容" />
    </view>
    <view class="btn-area">
      <button form-type="submit" type='primary'>提交</button>
    </view>
  </form>
</view>